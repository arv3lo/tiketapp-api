{
  "compilerOptions": {
    // Enable latest features
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "build",

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,
    "paths": {
      "@/*": ["./src/*"],
      "@auth/*": ["./src/modules/auth/*"],
      "@user/*": ["./src/modules/user/*"],
      "@event/*": ["./src/modules/event/*"],
      "@setup/*": ["./src/modules/ticket/ticket-setup/setup/*"],
      "@category/*": ["./src/modules/ticket/ticket-setup/category/*"],
      "@user-ticket/*": ["./src/modules/ticket/ticket-instance/user-ticket/*"],
      "@user-ticket-category/*": ["./src/modules/ticket/ticket-instance/user-ticket-category/*"],
      "@payment/*": ["./src/modules/payment/*"],
      "@history/*": ["./src/modules/history/*"],
    },
  },
  "include": ["src/**/*", "src/types/express.d.ts"]
}
